<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SurveyBackgroundColor"
    tools:context=".ImageChoiceActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/SurveyBackgroundColor"
        android:orientation="vertical"
        android:padding="@dimen/margin_small" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewSurveyQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/active_question"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/SurveyFontColor"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewSurveyFirstOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/active_response_a"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/SurveyFontColor" />

            <ImageButton
                android:id="@+id/surveyFirstImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/SurveyBackgroundColor"
                android:scaleType="fitStart"
                android:src="@drawable/option1_streetpaint" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewSurveySecondOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/active_response_b"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/SurveyFontColor" />

            <ImageButton
                android:id="@+id/surveySecondImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/SurveyBackgroundColor"
                android:scaleType="fitStart"
                android:src="@drawable/option2_gate" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewSurveyThirdOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/active_response_c"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/SurveyFontColor" />

            <ImageButton
                android:id="@+id/surveyThirdImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/SurveyBackgroundColor"
                android:scaleType="fitStart"
                android:src="@drawable/option3_grass" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewSurveyFourthOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/active_response_d"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/SurveyFontColor" />

            <Button
                android:id="@+id/surveyFourthImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dismissThanks"
                android:text="@string/survey_button_text"
                android:textColor="@color/SurveyFontColor"
                android:textStyle="italic" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/textViewSurveyFifthOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/active_response_e"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/SurveyFontColor" />

            <ImageButton
                android:id="@+id/surveyFifthImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/SurveyBackgroundColor"
                android:scaleType="fitStart" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
